<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
		<title>Gooey Templates : CMS Style App</title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta http-equiv="Expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
		<meta http-equiv="Pragma" content="no-cache" />
		<%= stylesheet_link_tag 'reset-fonts', :media => "all" %>
		<%= stylesheet_link_tag 'gt-styles', :media => "all" %>
</head>
<body>
		
		<!-- login form head -->
		<div class="gt-login-hd">
			Signup
		</div>
		
		<!-- login box -->
		<div class="gt-login-box">
			<!-- login form -->
			<div class="gt-form">
				<!-- form row -->
				<%= form_for(@landlord) do |f| %>
  				<% if @landlord.errors.any? %>
    					<div id="error_explanation">
      					<h2><%= pluralize(@landlord.errors.count, "error") %> prohibited this landlord from being saved:</h2>

      					<ul>
      					<% @landlord.errors.full_messages.each do |msg| %>
        				<li><%= msg %></li>
      					<% end %>
      					</ul>
    					</div>
  				<% end %>
				<div class="gt-form-row">
					<label class="gt-login-label">Name</label>
					<%= f.text_field :name, :class => 'gt-form-text' %>
				</div><!-- /form row -->
				
				<!-- form row -->
				<div class="gt-form-row">
					<label class="gt-login-label">Email Address</label>
					<%= f.text_field :email, :class => 'gt-form-text' %>
				</div><!-- /form row -->

				<!-- form row -->
				<div class="gt-form-row">
					<label class="gt-login-label">Password</label>
					<%= f.password_field :password, :class => 'gt-form-text' %>
				</div><!-- /form row -->

				<!-- form row -->
				<div class="gt-form-row">
					<label class="gt-login-label">ConfirmPassword</label>
					<%= f.password_field :password_confirmation, :class => 'gt-form-text' %>
				</div><!-- /form row -->
				
				<!-- form row -->
				<div class="gt-form-row">
					<!-- <label class="gt-remember-me"><input type="checkbox" class="gt-form-checkbox" /> Remember me</label> -->
					
					<%= f.submit 'Create my Account', :class =>'gt-btn-blue-large gt-btn-left' %>
					<% end %>
				</div>
				<!-- /form row -->
				
				<!-- <p class="gt-forgot-password"><a href="">Forgot your password?</a></p> -->
				
			</div><!-- /login form -->
		</div><!-- /login box -->
		
		
	</body>
</html>

